{
    "snippets.textmateSnippetsRoots":["~/.config/coc/snippets"],
    "snippets.userSnippetsDirectory": "~/.config/coc/snippets",

    // diagnostiscs and floating windows
    "suggest.enablePreview": true,
    "suggest.floatEnable": true,
    "suggest.autoTrigger": "always",
    "suggest.echodocSupport": true,
    "suggest.maxCompleteItemCount": 20,
    "diagnostic.enable": true,
    "diagnostic.checkCurrentLine": true,
    "diagnostic.enableMessage": "always",
    "suggest.numberSelect": false,
    "diagnostic.virtualText": false,
    "coc.preferences.previewAutoClose": true,

    "list.source.files.defaultOptions": ["--number-select"],

    // prettier support
    "prettier.eslintIntegration": true,
    "prettier.tslintIntegration": true,
    "prettier.stylelintIntegration": false,
    "prettier.disableLanguages": ["vue"],
    "prettier.disableSuccessMessage": false,
    "prettier.requireConfig": false,
    "prettier.onlyUseLocalVersion": false,

    // emmet
    "emmet.includeLanguages": {"vue-html": "html", "vue": "html", "javascript": "javascriptreact"},

    // explorer
    "explorer.icon.enableNerdfont": true,

    // load gosnippetst as well as ulti snips
    "snippets.ultisnips.directories": [
        "UltiSnips",
        "gosnippets/UltiSnips",
    ],
}
