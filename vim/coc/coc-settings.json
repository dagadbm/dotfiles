{
    // python
    "python.jediEnabled": false,

    // diagnostiscs and floating windows
    "suggest.enablePreview": true,
    "suggest.floatEnable": true,
    "suggest.autoTrigger": "always",
    "suggest.echodocSupport": true,
    "suggest.maxCompleteItemCount": 20,
    "diagnostic.enable": true,
    "diagnostic.checkCurrentLine": true,
    "diagnostic.enableMessage": "always",
    "suggest.numberSelect": false,
    "diagnostic.locationlist": true,
    "diagnostic.virtualText": false,
    "coc.preferences.previewAutoClose": true,

    "list.source.files.defaultOptions": ["--number-select"],

    // prettier support
    "prettier.eslintIntegration": true,
    "prettier.tslintIntegration": true,
    "prettier.stylelintIntegration": true,
    "prettier.disableLanguages": ["vue"],
    "prettier.disableSuccessMessage": false,
    "prettier.requireConfig": true,
    "prettier.onlyUseLocalVersion": true,

    // emmet
    "emmet.includeLanguages": {"vue-html": "html", "vue": "html", "javascript": "javascriptreact"},
    "emmet.showAbbreviationSuggestions": true,

    // explorer
    "explorer.icon.enableNerdfont": true
}
