[core]
	pager = delta
	editor = nvim
[interactive]
	diffFilter = delta --color-only
# reference: https://github.com/dandavison/delta
[delta]
	navigate = true
	light = false
[merge]
	conflictstyle = diff3
[diff]
	colorMoved = default
[credential]
	helper = osxkeychain
[alias]
	lg = !git log --stat --diff-algorithm=minimal --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(auto)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)'
[rerere]
	enabled = false
[push]
	autoSetupRemote = true
[pull]
	rebase = false
[diff]
	algorithm = histogram
	tool = nvimdiff
[difftool "nvimdiff"]
	prompt = false
	cmd = nvim -d $LOCAL $REMOTE
[merge]
	tool = nvim-fugitive-merge
[mergetool]
	keepBackup = false
[mergetool "nvim-fugitive-merge"]
	prompt = false
	keepBackup = false
	cmd = nvim -c "Gvdiffsplit!" -- "$MERGED"
[column]
	ui = auto
# vim: set ft=gitconfig:
